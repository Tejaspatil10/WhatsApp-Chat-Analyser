import re
import pandas as pd


def preprocess(data):
    # Define the regex pattern to match dates in WhatsApp format
    pattern = r'\d{1,2}/\d{1,2}/\d{2,4},\s\d{1,2}:\d{2}\s?[ap]m\s-\s'

    # Split the data into messages and dates
    messages = re.split(pattern, data)[1:]  # Remove the first empty entry
    dates = re.findall(pattern, data)

    # Create a DataFrame
    df = pd.DataFrame({'user_message': messages, 'message_date': dates})

    # Convert message_date type (for 12-hour format with AM/PM)
    df['message_date'] = pd.to_datetime(df['message_date'], format='%d/%m/%Y, %I:%M %p - ', errors='coerce')

    # Rename the column
    df.rename(columns={'message_date': 'date'}, inplace=True)

    # Initialize lists for users and messages
    users = []
    message_texts = []

    # Split messages into users and text
    for message in df['user_message']:
        entry = re.split(r'([\w\W]+?):\s', message, maxsplit=1)
        if len(entry) > 1:  # User and message
            users.append(entry[1])
            message_texts.append(entry[2])
        else:  # System messages (e.g., group notifications)
            users.append('group_notification')
            message_texts.append(entry[0])

    # Add users and messages to the DataFrame
    df['user'] = users
    df['message'] = message_texts

    # Drop the 'user_message' column as it's no longer needed
    df.drop(columns=['user_message'], inplace=True)

    # Add additional date-related columns
    df['Date'] = df['date'].dt.date
    df['year'] = df['date'].dt.year
    df['month_num'] = df['date'].dt.month
    df['month'] = df['date'].dt.month_name()
    df['day'] = df['date'].dt.day
    df['day_name'] = df['date'].dt.day_name()
    df['hour'] = df['date'].dt.hour
    df['minute'] = df['date'].dt.minute

    return df
